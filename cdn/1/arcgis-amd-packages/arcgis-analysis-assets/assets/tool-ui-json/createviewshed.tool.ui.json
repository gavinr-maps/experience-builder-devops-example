{
  "toolName": "CreateViewshed",
  "version": "0.1.0",
  "rules": [
    {
      "ruleType": "equals",
      "valueA": "$[Data].maxDistanceUnits",
      "valueB": "Kilometers",
      "destination": "maximumDistance",
      "effectParams": {
        "max": 50
      }
    },
    {
      "ruleType": "equals",
      "valueA": "$[Data].maxDistanceUnits",
      "valueB": "Meters",
      "destination": "maximumDistance",
      "effectParams": {
        "max": 50000
      }
    },
    {
      "ruleType": "equals",
      "valueA": "$[Data].maxDistanceUnits",
      "valueB": "Feet",
      "destination": "maximumDistance",
      "effectParams": {
        "max": 164041
      }
    },
    {
      "ruleType": "equals",
      "valueA": "$[Data].maxDistanceUnits",
      "valueB": "Yards",
      "destination": "maximumDistance",
      "effectParams": {
        "max": 54680
      }
    },
    {
      "ruleType": "equals",
      "valueA": "$[Data].maxDistanceUnits",
      "valueB": "Miles",
      "destination": "maximumDistance",
      "effectParams": {
        "max": 31
      }
    },
    {
      "ruleType": "expression",
      "expression": "$[Data].userSettings.unitSystem = 'metric'",
      "destination": "observerHeight",
      "effectParams": {
        "defaultValue": 1.75
      }
    },
    {
      "ruleType": "expression",
      "expression": "$[Data].userSettings.unitSystem = 'metric'",
      "destination": "observerHeightUnits",
      "effectParams": {
        "choiceList": ["Kilometers", "Meters", "Miles", "Yards", "Feet"],
        "defaultValue": "Meters"
      }
    },
    {
      "ruleType": "expression",
      "expression": "$[Data].userSettings.unitSystem = 'metric'",
      "destination": "targetHeightUnits",
      "effectParams": {
        "choiceList": ["Kilometers", "Meters", "Miles", "Yards", "Feet"],
        "defaultValue": "Meters"
      }
    },
    {
      "ruleType": "expression",
      "expression": "$[Data].userSettings.unitSystem = 'metric'",
      "destination": "maximumDistance",
      "effectParams": {
        "defaultValue": 15
      }
    },
    {
      "ruleType": "expression",
      "expression": "$[Data].userSettings.unitSystem = 'metric'",
      "destination": "maxDistanceUnits",
      "effectParams": {
        "choiceList": ["Kilometers", "Meters", "Miles", "Yards", "Feet"],
        "defaultValue": "Kilometers"
      }
    }
  ],
  "environmentSettings": {
    "raster": []
  },
  "UIparameters": [
    {
      "label": "$inputLayerGroupLabel",
      "componentName": "analysis-block",
      "summaryText": "$inputLayerGroupText",
      "UIparameters": [
        {
          "name": "inputLayer",
          "label": "$inputObserverFeaturesLayerLabel",
          "componentName": "analysis-layer-input",
          "required": true,
          "selectionMode": "single",
          "hideSketch": false,
          "layerFilterType": ["feature_point"]
        }
      ]
    },
    {
      "label": "$inputViewshedSettingGroupLabel",
      "componentName": "analysis-block",
      "summaryText": "$inputViewshedSettingGroupText",
      "UIparameters": [
        {
          "layout": "horizontal",
          "name": "observersHeightUnitGroup",
          "UIparameters": [
            {
              "name": "observerHeight",
              "label": "$observersHeightLabel",
              "componentName": "analysis-number-input",
              "required": false,
              "defaultValue": 6,
              "min": 0
            },
            {
              "name": "observerHeightUnits",
              "label": "$observerHeightUnitLabel",
              "componentName": "analysis-string-input",
              "choiceList": ["Miles", "Yards", "Feet", "Kilometers", "Meters"],
              "choiceListLabels": {
                "Feet": "$feet",
                "Miles": "$miles",
                "Kilometers": "$kilometers",
                "Meters": "$meters",
                "Yards": "$yards"
              },
              "defaultValue": "Feet",
              "useDefaultOnReset": true,
              "required": false
            }
          ]
        },
        {
          "layout": "horizontal",
          "name": "targetHeightUnitGroup",
          "UIparameters": [
            {
              "name": "targetHeight",
              "label": "$targetHeightLabel",
              "componentName": "analysis-number-input",
              "required": false,
              "defaultValue": 0,
              "min": 0
            },
            {
              "name": "targetHeightUnits",
              "label": "$targetHeightUnitLabel",
              "componentName": "analysis-string-input",
              "choiceList": ["Miles", "Yards", "Feet", "Kilometers", "Meters"],
              "choiceListLabels": {
                "Feet": "$feet",
                "Miles": "$miles",
                "Kilometers": "$kilometers",
                "Meters": "$meters",
                "Yards": "$yards"
              },
              "defaultValue": "Feet",
              "useDefaultOnReset": true,
              "required": false
            }
          ]
        },
        {
          "layout": "horizontal",
          "name": "maximumViewingDistanceUnitGroup",
          "UIparameters": [
            {
              "name": "maximumDistance",
              "label": "$maximumViewingDistanceLabel",
              "componentName": "analysis-number-input",
              "required": false,
              "defaultValue": 9,
              "min": 0
            },
            {
              "name": "maxDistanceUnits",
              "label": "$viewingDistanceUnitLabel",
              "componentName": "analysis-string-input",
              "choiceList": ["Miles", "Yards", "Feet", "Kilometers", "Meters"],
              "choiceListLabels": {
                "Feet": "$feet",
                "Miles": "$miles",
                "Kilometers": "$kilometers",
                "Meters": "$meters",
                "Yards": "$yards"
              },
              "defaultValue": "Miles",
              "useDefaultOnReset": true,
              "required": false
            }
          ]
        },
        {
          "name": "demResolution",
          "label": "$demResolution",
          "componentName": "analysis-string-input",
          "required": false,
          "visible": false
        },
        {
          "name": "generalize",
          "label": "$generalize",
          "componentName": "analysis-boolean-input",
          "required": false,
          "visible": false
        }
      ]
    },
    {
      "label": "$resultLayerGroupLabel",
      "layout": "vertical",
      "componentName": "analysis-block",
      "summaryText": "$resultLayerGroupText",
      "UIparameters": [
        {
          "name": "outputName",
          "label": "$outputPolygonNameLabel",
          "componentName": "analysis-string-input",
          "required": true,
          "placeholderText": "$outputNamePlaceholderText"
        },
        {
          "name": "saveResultIn",
          "label": "$saveResultIn",
          "componentName": "analysis-folder-input"
        }
      ]
    }
  ]
}
